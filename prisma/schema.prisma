// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Category {
  id          String    @id @default(cuid())
  name        String    @unique
  slug        String    @unique
  description String?
  bannerImage String?   // Banner image URL for category pages
  order       Int       @default(0) // For custom ordering
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  articles    Article[]

  @@map("categories")
}

model Editor {
  id        String    @id @default(cuid())
  name      String
  email     String    @unique
  slug      String    @unique
  bio       String?
  avatar    String?
  image     String?   // Profile image URL (can be different from avatar)
  title     String?   // Job title (e.g., "Reporter, AI MEDIA HOUSE")
  twitter   String?   // Twitter/X handle or URL
  linkedin  String?   // LinkedIn profile URL
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  articles  Article[]

  @@index([slug])
  @@map("editors")
}

model Article {
  id                       String       @id @default(cuid())
  title                    String
  slug                     String       @unique
  excerpt                  String?
  content                  String
  featuredImage            String?
  featuredImageMediaId     String?
  featuredImageMedia       Media?        @relation(fields: [featuredImageMediaId], references: [id], onDelete: SetNull)
  featuredImageTitle       String? // Image title for SEO
  featuredImageCaption     String? // Image caption
  featuredImageDescription String? // Image description
  featuredImageAltText     String? // Image alt text for accessibility and SEO
  published                Boolean      @default(false)
  publishedAt              DateTime?
  scheduledAt               DateTime?
  views                    Int          @default(0)
  likesCount               Int          @default(0) // Cached count of likes
  readTime                 Int          @default(5) // in minutes
  metaTitle                String?
  metaDescription          String?
  featured                 Boolean      @default(false) // Main featured article for homepage
  subFeatured              Boolean      @default(false) // Sub-featured articles (2 below main featured)
  exclusive                Boolean      @default(false) // Exclusive stories section
  categoryId                String
  category                 Category     @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  editorId                 String
  editor                   Editor        @relation(fields: [editorId], references: [id], onDelete: Cascade)
  comments                 Comment[]
  likes                    Like[]
  articleViews             ArticleView[]
  createdAt                DateTime     @default(now())
  updatedAt                DateTime     @updatedAt

  @@index([slug])
  @@index([published, publishedAt])
  @@index([scheduledAt])
  @@index([categoryId])
  @@index([featuredImageMediaId])
  @@map("articles")
}

model Comment {
  id        String   @id @default(cuid())
  content   String
  authorId  String?
  author    User?    @relation(fields: [authorId], references: [id], onDelete: SetNull)
  articleId String
  article   Article  @relation(fields: [articleId], references: [id], onDelete: Cascade)
  approved  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([articleId])
  @@index([authorId])
  @@index([approved])
  @@map("comments")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  googleId  String?  @unique
  avatar    String?
  provider  String?  @default("google") // OAuth provider
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  comments  Comment[]
  likes     Like[]
  views     ArticleView[]

  @@index([googleId])
  @@map("users")
}

model Subscriber {
  id        String   @id @default(cuid())
  email     String   @unique
  createdAt DateTime @default(now())

  @@map("subscribers")
}

model Settings {
  id                 String   @id @default("default")
  siteName           String   @default("AI Tech News")
  logoUrl            String?
  navLinksJson       String? // JSON string of nav links
  footerLinksJson    String? // JSON string of footer links
  subscribeCta       String? // CTA text shown near subscribe form
  headerBarLeftText  String? // Left side text in header bar
  headerBarLeftLink  String? // Left side link URL in header bar
  headerBarRightText String? // Right side text in header bar
  headerBarRightLink String? // Right side link URL in header bar
  
  // Design System Settings - Colors
  designSystemColorsJson String? // JSON string containing all color settings
  
  // Design System Settings - Typography
  designSystemTypographyJson String? // JSON string containing all typography settings
  
  // Design System Settings - Spacing
  designSystemSpacingJson String? // JSON string containing all spacing settings
  
  // Design System Settings - Layout
  designSystemLayoutJson String? // JSON string containing all layout settings
  
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  @@map("settings")
}

model SponsoredBanner {
  id           String    @id @default(cuid())
  title        String // Banner title/name for admin
  imageUrl     String // Banner image URL
  linkUrl      String? // Click-through URL (optional)
  type         String // 'homepage-main' | 'homepage-side' | 'article-side' | 'article-top'
  active       Boolean   @default(true)
  startDate    DateTime?
  endDate      DateTime?
  displayOrder Int       @default(0) // For ordering multiple banners of same type
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@index([type, active])
  @@map("sponsored_banners")
}

model StaticPage {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  content     String   // HTML content
  metaTitle   String?
  metaDescription String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([slug])
  @@map("static_pages")
}

model Media {
  id        String    @id @default(cuid())
  filename  String
  mimeType  String
  data      Bytes     // BLOB storage for image binary data
  size      Int       // file size in bytes
  altText   String?
  title     String?
  caption   String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  articles  Article[]

  @@index([createdAt])
  @@map("media")
}

model Like {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  articleId String
  article   Article  @relation(fields: [articleId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, articleId])
  @@index([articleId])
  @@index([userId])
  @@map("likes")
}

model ArticleView {
  id          String   @id @default(cuid())
  userId      String?  // Nullable for anonymous users
  user        User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  anonymousId String?  // Cookie-based ID for anonymous users
  articleId   String
  article     Article  @relation(fields: [articleId], references: [id], onDelete: Cascade)
  viewedAt    DateTime @default(now())

  @@index([articleId])
  @@index([userId])
  @@index([anonymousId])
  @@index([viewedAt])
  @@map("article_views")
}

model ArticleEmbedding {
  id        String   @id @default(cuid())
  articleId String   @unique
  embedding String   // JSON string of embedding vector
  model     String   @default("sentence-transformers/all-MiniLM-L6-v2")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([articleId])
  @@map("article_embeddings")
}
